private boolean verifyInput(String input) //checks to insure an input by user is strictly characters 
	{
		
		char[] ch1 = input.toCharArray(); //adds input into an array of chars
		boolean isLetter = false;
		char nam;
		
		
		for(int i=0; i<ch1.length; i++)
		{
			nam = ch1[i];
			if(Character.isLetter(nam))
			{
				isLetter = false;
				
			}
			else
			{
				isLetter = true;
				break;
			}
		}
		
		return isLetter;
	}
